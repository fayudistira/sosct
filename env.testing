# CI/CD Testing Environment Configuration
# This file is used by GitHub Actions for running tests

CI_ENVIRONMENT = testing

# --------------------------------------------------------------------------
# APP
# --------------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
app.forceGlobalSecureRequests = false
app.CSPEnabled = false

# --------------------------------------------------------------------------
# DATABASE
# --------------------------------------------------------------------------
database.default.hostname = localhost
database.default.database = feecs_test
database.default.username = root
database.default.password = root
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# Tests database (used by phpunit)
database.tests.hostname = localhost
database.tests.database = feecs_test
database.tests.username = root
database.tests.password = root
database.tests.DBDriver = MySQLi
database.tests.DBPrefix = tests_
database.tests.port = 3306

# --------------------------------------------------------------------------
# ENCRYPTION
# --------------------------------------------------------------------------
encryption.key = 'testing-encryption-key-32-chars!!'

# --------------------------------------------------------------------------
# SESSION
# --------------------------------------------------------------------------
session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.savePath = WRITEPATH . 'session'

# --------------------------------------------------------------------------
# EMAIL (Disable actual emails in testing)
# --------------------------------------------------------------------------
email.fromEmail = 'test@example.com'
email.fromName = 'FEECS Test'
email.SMTPHost = ''
email.SMTPUser = ''
email.SMTPPass = ''
email.SMTPPort = 587
email.SMTPCrypto = 'tls'
email.mailType = 'html'
